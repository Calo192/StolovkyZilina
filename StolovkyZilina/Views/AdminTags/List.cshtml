@model StolovkyZilina.Models.ViewModels.AdminTagsViewModel

@{
}

<div class="bg-secondary bg-opacity-10 py-2">
	<div class="container">
		<h1>Tagy - Admin</h1>
	</div>
</div>

<div class="container py-5">
	<table class="table">
		<thead>
			<tr>
				<th>Popisny nazov</th>
				<th>Skratka</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			<form method="post">
			<tr>
				<td><input type="text" class="form-control" id="name" asp-for="Name" /></td>
				<td><input type="text" class="form-control" id="displayName" asp-for="DisplayName" /></td>
				<td>
					<div class="d-flex container">
						<button type="submit" class="btn btn-primary">Pridat</button>
					</div>
				</td>
			</tr>
			</form>
			@foreach (var tag in Model.Tags)
			{
				<tr>
					<td>@tag.Name</td>
					<td>@tag.DisplayName</td>
					<td>
						<div class="d-flex container">
							<form method="get" asp-area="" asp-controller="AdminTags" asp-action="Edit" asp-route-id="@tag.Id">
								<button class="btn btn-outline-primary me-2" type="submit">Upravit</button>
							</form>

							<form method="get" asp-area="" asp-controller="AdminTags" asp-action="Delete" asp-route-id="@tag.Id">
								<button class="btn btn-outline-danger" type="submit">Odstranit</button>
							</form>
						</div>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>