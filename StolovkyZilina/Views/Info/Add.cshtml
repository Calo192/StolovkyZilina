@model StolovkyZilina.Models.Requests.AddLocationRequest
@{
}

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>Nové herné miesto</h1>
    </div>
</div>

<div class="container py-5">
    <form method="post" enctype="multipart/form-data">

        <div class="form-floating mb-3">
            <input type="text" class="form-control" id="name" placeholder="Nazov" asp-for="Name">
            <label for="name">Nazov</label>
        </div>
        <div class="form-floating mb-3">
            <input type="text" class="form-control" id="postalcode" placeholder="PSC" asp-for="PostalCode">
            <label for="postalcode">PSC</label>
        </div>
        <div class="form-floating mb-3">
            <input type="text" class="form-control" id="city" placeholder="Mesto" asp-for="City">
            <label for="city">Mesto</label>
        </div>
        <div class="form-floating mb-3">
            <input type="text" class="form-control" id="street" placeholder="Ulica" asp-for="Street">
            <label for="street">Ulica</label>
        </div>
        <div class="form-floating mb-3">
            <input type="text" class="form-control" id="buildingnumber" placeholder="Cislo budovy (nepovinne)" asp-for="BuildingNumber">
            <label for="buildingnumber">Cislo budovy (nepovinne)</label>
        </div>
        <div class="form-floating mb-3">
            <input type="text" class="form-control" id="floor" placeholder="Poschodie (nepovinne)" asp-for="FloorNumber">
            <label for="floor">Poschodie (nepovinne)</label>
        </div>
        <div class="form-floating mb-3">
            <input type="text" class="form-control" id="doornumber" placeholder="Napis na dverach (meno, cislo, ... nepovinne)" asp-for="DoorNumer">
            <label for="doornumber">Napis na dverach (meno, cislo, ... nepovinne)</label>
        </div>
        <p class="d-inline-flex gap-1">
            <a class="btn btn-primary" data-bs-toggle="collapse" href="#multiCollapseHowToAdd" role="button" aria-expanded="false" aria-controls="multiCollapseExample1">Ako pridat link?</a>
            <button class="btn btn-primary" type="button" data-bs-toggle="collapse" data-bs-target="#multiCollapseHowDoesItLookLike" aria-expanded="false" aria-controls="multiCollapseExample2">Ako link vyzera?</button>
        </p>
        <div class="row">
            <div class="col">
                <div class="collapse multi-collapse" id="multiCollapseHowToAdd">
                    <div>
                        <p>1. Chod na <a href="https://www.google.sk/maps/preview" target="_blank">Google mapy</a></p>
                        <p>2. Vyhladaj miesto, ktore chces pridat</p>
                        <p>3. Klikni share <i class="bi bi-share"></i></p>
                        <p>4. Vyber zalozku <b>Embed a map</b> (druha zalozka)</p>
                        <p>5. Klikni na <b>COPY HTML</b></p>
                        <p>6. Vloz link sem</p>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="collapse multi-collapse" id="multiCollapseHowDoesItLookLike">
                    <div>
                        <p>Link je vo formate <b>&lt;iframe src= </b>... vela znakov ktorym nikto nerozumie ...  <b>&lt;iframe&gt;</b>.</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="form-floating mb-3">
            <input type="text" class="form-control" id="googlemapslink" placeholder="Link na google mapy" asp-for="GoogleMapsLink">
            <label for="googlemapslink">Link na google mapy</label>
        </div>
        <div class="form-floating mb-3">
            <textarea class="form-control" placeholder="Kratky popis" id="shortdesc" asp-for="ShortDesc"></textarea>
            <label for="shortdesc">Kratky popis</label>
        </div>

        <div class="mb-3 p-3 border rounded">
            <label for="spacereq" class="form-label">Herne priestory</label>
            <div class="container d-flex">
                <p style="width: 120px">Male</p>
                <input type="range" class="form-range p-3" min="0" max="2" step="1" value="1" id="spacereq" asp-for="Space">
                <p class="text-end" style="width: 120px">Velke</p>
            </div>
        </div>

        <div class="mb-3">
            <button type="submit" class="btn btn-primary">
                Ulozit
            </button>
        </div>
    </form>
</div>
