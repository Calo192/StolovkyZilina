@model StolovkyZilina.Models.ViewModels.LoginViewModel
@{
}

<div class="container mx-auto">
	<div class="row justify-content-center">
		<div class="col-12 col-lg-6">
			<h1 class="mt-3 mb-3 h3">
				Prihlasenie
			</h1>
			<form method="post">
				<div class="mb-3">
					<label class="form-label">Uzivatelske meno</label>
					<input type="text" id="username" class="form-control" asp-for="Username" />
					<span class="text-danger" asp-validation-for="Username"></span>
				</div>

				<div class="mb-3">
					<label class="form-label">Heslo</label>
					<input type="password" id="password" class="form-control" asp-for="Password" />
					<span class="text-danger" asp-validation-for="Password"></span>
				</div>

				<div class="mb-3 d-flex justify-content-between align-items-center">
					<button type="submit" class="btn btn-primary">Prihlásiť</button>
					@if (Model.RepeatedAttempt)
					{
						<button type="button" class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#forgotPass">
							Zabudnute heslo? 
						</button>
					}
				</div>
				<input type="hidden" asp-for="ReturnUrl"/>
			</form>
		</div>
	</div>
</div>

<!-- Modal -->
<div class="modal fade" id="forgotPass" tabindex="-1" aria-labelledby="forgotPassModal" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
				<h1 class="modal-title fs-5" id="forgotPassModal">Zabudnuté heslo</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
				<div class="mb-3">
					<label>Zadaj meno alebo email. Nasledne bude na email prislusneho uctu zaslane nove docasne heslo.</label>
				</div>
				<div class="mb-3">
					<label class="form-label">Uživateľské meno</label>
					<input type="text" class="form-control" />
				</div>
				<div class="mb-3">
					<label class="form-label">Email</label>
					<input type="email" class="form-control" />
				</div>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-primary">Chcem nové heslo!</button>
            </div>
        </div>
    </div>
</div>