@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> signInManager

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - StolovkyZilina</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/StolovkyZilina.styles.css" asp-append-version="true" />
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
</head>
<body>
	<header>
		<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow">
			<div class="container">
				<a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">StolovkyZilina</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
						aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
					<ul class="navbar-nav flex-grow-1">
						<li class="nav-item">
							<a class="nav-link text-light" asp-area="" asp-controller="BlogPosts" asp-action="List">Články</a>
						</li>
						<li class="nav-item">
							<a class="nav-link text-light" asp-area="" asp-controller="Events" asp-action="List">Udalosti</a>
						</li>
						<li class="nav-item">
							<a class="nav-link text-light" asp-area="" asp-controller="Games" asp-action="List">Hry</a>
						</li>
						<li class="nav-item">
							<a class="nav-link text-light text-nowrap" asp-area="" asp-controller="Plays" asp-action="List">Herné partie</a>
						</li>
						<li class="nav-item">
							<a class="nav-link text-light text-nowrap" asp-area="" asp-controller="Playmates" asp-action="Index">Spoluhráči</a>
						</li>
						<li class="nav-item">
							<a class="nav-link text-light text-nowrap" asp-area="" asp-controller="Statistics" asp-action="Index">Štastiky</a>
						</li>

						<li class="nav-item dropdown">
							<a class="nav-link dropdown-toggle text-light" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
								O nás
							</a>
							<ul class="dropdown-menu">
								<li>
									<a class="dropdown-item"
									   asp-area=""
									   asp-controller="Info"
									   asp-action="Info">
										Info
									</a>
								</li>
								<li>
									<a class="dropdown-item"
									   asp-area=""
									   asp-controller="Users"
									   asp-action="List">
										Členovia
									</a>
								</li>
								<li>
									<a class="dropdown-item"
									   asp-area=""
									   asp-controller="Info"
									   asp-action="List">
										Kde sa stretávame
									</a>
								</li>
							</ul>
						</li>
						@if (signInManager.IsSignedIn(User) && User.IsInRole("Admin"))
						{
							<li class="nav-item dropdown">
								<a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
									Admin
								</a>
								<ul class="dropdown-menu">
									<li class="nav-item">
										<a class="dropdown-item"
										   asp-area=""
										   asp-controller="Feed"
										   asp-action="List">
											Aktuality
										</a>
									</li>
									<li>
										<a class="dropdown-item"
										   asp-area=""
										   asp-controller="AdminTags"
										   asp-action="List">
											Tagy
										</a>
									</li>

									<li>
										<a class="dropdown-item"
										   asp-area=""
										   asp-controller="AdminLanguages"
										   asp-action="List">
											Jazyky
										</a>
									</li>

									<li>
										<a class="dropdown-item"
										   asp-area=""
										   asp-controller="AdminBlogPosts"
										   asp-action="List">
											Články
										</a>
									</li>

									<li>
										<a class="dropdown-item"
										   asp-area=""
										   asp-controller="AdminGames"
										   asp-action="List">
											Hry
										</a>
									</li>

									<li>
										<a class="dropdown-item"
										   asp-area=""
										   asp-controller="AdminUsers"
										   asp-action="List">
											Uživatelia
										</a>
									</li>
								</ul>
							</li>
						}
					</ul>
					<div class="d-flex align-items-center">
						@if (signInManager.IsSignedIn(User))
						{
							<div class="me-3 text-light d-flex align-items-center">
								<a class="link-light me-2" asp-area="" asp-controller="Account" asp-action="Profile" asp-route-userName="@User?.Identity?.Name">@User?.Identity?.Name</a>
								<a class="bi bi-gear link-light ms-2 me-2" asp-area="" asp-controller="Account" asp-action="EditProfile" asp-route-userName="@User?.Identity?.Name"></a>
								@if (User.IsInRole("Admin"))
								{
									<a class="bi bi-envelope link-light ms-2 me-2" asp-area="" asp-controller="AdminMessages" asp-action="List"></a>
								}
								else
								{
									<a class="bi bi-send link-light ms-2 me-2" asp-area="" asp-controller="AdminMessages" asp-action="Send"></a>
								}
							</div>
							<a class="btn me-3 bg-light text-dark" asp-area="" asp-controller="Account" asp-action="Logout">Odhlásiť</a>
						}
						else
						{
							<a class="btn me-3 bg-light text-dark" asp-area="" asp-controller="Account" asp-action="Register">Registrovať</a>
							<a class="btn me-3 bg-light text-dark" asp-area="" asp-controller="Account" asp-action="Login">Prihlásiť</a>
						}
					</div>
				</div>
			</div>
		</nav>
	</header>
	<div>
		<main role="main" class="pb-3">
			@RenderBody()
		</main>
	</div>

	<footer class="border-top footer text-muted">
		<div class="container">
			&copy; 2023 - HnoyBoyProduction
		</div>
	</footer>
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
