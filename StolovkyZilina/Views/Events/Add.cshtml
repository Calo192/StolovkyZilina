@model StolovkyZilina.Models.Requests.EventRequest
@{
}
<div class="bg-secondary bg-opacity-10 py-2">
	<div class="container">
		<h1>Nova Udalost</h1>
	</div>
</div>

<div class="container py-5">
    <form method="post" enctype="multipart/form-data">
        <div class="form-floating mb-3">
            <input type="text" class="form-control" id="name" placeholder="Názov" asp-for="Name">
            <label for="name">Názov</label>
        </div>

        <div class="mb-3">
            <label for="formFile" class="form-label">Obrázok</label>
            <input class="form-control" type="file" id="fileInput" name="fileInput">
        </div>

        <div class=" mb-3">
            <label class="form-label">Aukcia</label>
            <div class="btn-group d-flex justify-content-center text-center" role="group">
                <input type="radio" class="btn-check" id="btnradio3" name="AuctionOption" asp-for="AuctionOption" value="0" autocomplete="off">
                <label class="btn btn-outline-danger" for="btnradio3">Žiadna</label>
                <input type="radio" class="btn-check" id="btnradio2" name="AuctionOption" asp-for="AuctionOption" value="1" autocomplete="off">
                <label class="btn btn-outline-primary" for="btnradio2">Individuálna</label>
                <input type="radio" class="btn-check" id="btnradio1" name="AuctionOption" asp-for="AuctionOption" value="2" autocomplete="off">
                <label class="btn btn-outline-primary" for="btnradio1">Kumulatívna</label>
            </div>
        </div>

        <div class="form-floating mb-3">
            <textarea class="form-control" placeholder="Krátky popis" id="shortdesc" asp-for="ShortDescription"></textarea>
            <label for="shortdesc">Krátky popis</label>
        </div>

        <div class="form-floating mb-3">
            <textarea class="form-control" placeholder="Popis" id="desc" asp-for="Description" style="height: 200px"></textarea>
            <label for="desc">Popis</label>
        </div>

        <div class="mb-3">
            <label class="form-label">Tagy</label>
            <select class="form-select" asp-items="@Model.Tags" asp-for="SelectedTags">
            </select>
        </div>

        <div class="mb-3">
            <div class="form-floating flex-fill">
                <select class="form-select" id="locationsList" asp-items="@Model.Locations" asp-for="SelectedLocationId">
                </select>
                <label for="locationsList" class="form-label">Miesto</label>
            </div>
        </div>

        <div class="d-flex mb-3">
            <div class="form-floating flex-fill me-2">
                <input type="datetime-local" class="form-control" id="start" step="any" asp-for="Time">
                <label for="start">Dátum konania</label>
            </div>
        </div>

        <div class="mb-3">
            <button type="submit" class="btn btn-primary">
                Uložiť
            </button>
        </div>
    </form>
</div>
