@model List<StolovkyZilina.Models.Domain.BlogPost>
@{
}


<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>Blogy - Admin</h1>
    </div>
</div>

<div class="container py-5">
    @if (Model != null && Model.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <td>
                        Nadpis
                    </td>
                    <td>
                        Autor
                    </td>
                    <td>
                        Tagy
                    </td>
                    <td></td>
                </tr>
            </thead>
            <tbody>
                @foreach (var blogPost in Model)
                {
                    <tr>
                        <td>
                            @blogPost.Heading
                        </td>
                        <td>
                            @blogPost.Author
                        </td>
                        <td>
                            <div class="d-flex">
                                @foreach (var tag in blogPost.Tags)
                                {
                                    <span class="badge bg-secondary me-1">
                                        @tag.DisplayName
                                    </span>
                                }
                            </div>
                        </td>
                        <td>
                            <a asp-area="" asp-controller="AdminBlogPosts" asp-action="Edit" asp-route-id="@blogPost.Id">
                                Upravit
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>Vies co ma spolocne tvoja penazenka a tato tabulka?</p>
    }


</div>